{{{partial 'app/views/layouts/layout_nav' root=this user=user nav=pageData.nav}}}

<div class="container">
  <section class="signin container">
    <h3>Creare Cont</h3>

    <div class="signin-form col-lg-5">
      <form role="form" action="/users" method="POST">
        <div class="form-group">
          <label for="inputUsername">Nume utilizator</label>
          <input type="text" class="form-control" name="username" id="inputUsername" placeholder="Nume utilizator">
        </div>
        <div class="form-group">
          <label for="inputEmail">Email</label>
          <input type="text" class="form-control" name="email" id="inputEmail" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="inputPassword" class="pull-left">Parolă</label>
          <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Parolă">
        </div>
        <input type="hidden" name="role" value="user">
        <div class="signin-buttons">
          <button type="submit" class="btn btn-inverse">Creează Cont</button>
        </div>
      </form>
    </div>
  </section>
</div>
