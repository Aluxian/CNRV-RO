{{{partial 'app/views/layouts/layout_nav' user=user}}}

<div class="container">
  <section class="container">
    <div class="articlesWrapper col-md-8">
      <div class="articles">
        {{#each posts}}
        {{{partial 'app/views/layouts/layout_post' post=this}}}
        {{/each}}
      </div>

      <ul class="pager">
        <li class="previous"><a href="#">&larr; Older</a></li>
        <li class="next disabled"><a href="#">Newer &rarr;</a></li>
      </ul>
    </div>

    {{{partial 'app/views/layouts/layout_widgets' recentPosts=recentPosts}}}
  </section>
</div>
