<div class="hero-unit">
  <h2 class="title">{{ post.title }}</h2>
  <a href="/posts/{{params.id}}/edit" class="btn pull-right">Edit this post</a>
</div>

<h2>Post Properties</h2>
{{#each post }}
<div class="row list-item">
  <div class="span4">
    <h3>{{@key}}</h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="{{ @key }}">{{ this }}</span></h3>
  </div>
</div>
{{/each}}