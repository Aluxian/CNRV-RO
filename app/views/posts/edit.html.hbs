{{{partial 'app/views/layouts/layout_nav' root=this user=pageData.user nav=pageData.nav}}}

<div class="container">
  <section class="container add-post">
    <h4>Editează postare</h4>

    <form action="{{postPath post.id}}?_method=PUT" method="POST">
      <div class="input-group title-input">
        <span class="input-group-addon">Nume</span>
        <input type="text" class="form-control" name="title" value="{{post.title}}">
      </div>

      {{{partial 'app/views/layouts/layout_editor_toolbar'}}}

      <div id="editor">
        {{{post.content}}}
      </div>

      <div class="row post-options">
        <div class="col-md-3">
          <div class="input-group">
            <span class="input-group-addon">Categorie</span>
            <select class="form-control" name="categoryId">
              {{#each categories}}
              <option value="{{id}}"{{#ifEqual name ../post.category.name}} selected{{/ifEqual}}>{{name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="col-md-3 col-md-offset-6 post-buttons">
          <input type="hidden" name="content" value="" id="postValue">
          <!-- <button type="submit" class="btn btn-inverse" name="status" value="draft">Save as draft</button> -->
          <button type="submit" class="btn btn-danger" formaction="{{postPath post.id}}?_method=DELETE">Șterge</button>
          <a href="{{postPath post.id}}" class="btn btn-inverse">Renunță</a>
          <button type="submit" class="btn btn-inverse" id="transferContent">Salvează</button>
        </div>
      </div>
    </form>
  </section>
</div>
