<div class="widget">
  <h3>Comentarii Recente</h3>
  <ul class="widget-comments">
    {{#each root.widgets.recentComments}}
    <li>
      <div class="widget-comment">
        <div class="col-xs-4">
          {{#if user}}
          <a href="{{userPath user.id}}" title="{{user.givenName}} {{user.familyName}}"><img class="comment-avatar" src="{{user.avatar}}" alt="Avatar"></a>
          {{else}}
          <img class="comment-avatar" src="//www.gravatar.com/avatar/?s=100&d=mm" alt="Avatar">
          {{/if}}
        </div>
        <div class="col-xs-8">
          <a href="{{postPath post.id}}"><p>{{truncate content 130}}</p></a>
          <div class="smaller">on <a href="{{postPath post.id}}">{{post.title}}</a></div>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
