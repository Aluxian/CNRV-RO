<div class="hero-unit">
  <h2 class="name">{{ link.name }}</h2>
  <a href="/links/{{params.id}}/edit" class="btn pull-right">Edit this link</a>
</div>

<h2>Link Properties</h2>
{{#each link }}
<div class="row list-item">
  <div class="span4">
    <h3>{{@key}}</h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="{{ @key }}">{{ this }}</span></h3>
  </div>
</div>
{{/each}}