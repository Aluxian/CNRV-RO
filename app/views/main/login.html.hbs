{{{partial 'app/views/layouts/layout_nav' root=this user=user nav=pageData.nav}}}

<div class="container">
  <section class="signin container">
    <h3>Sign In</h3>

    <div class="signin-form col-lg-5">
      <form role="form" action="{{localPath}}" method="POST">
        <div class="form-group">
          <label for="inputLogin">Login</label>
          <input type="text" class="form-control" name="username" id="inputLogin" placeholder="Username">
        </div>
        <div class="form-group">
          <div>
            <label for="inputPassword" class="pull-left">Password</label>
            <a class="pull-right signin-recover" tabindex="-1" href="/recovery">Forgot Password?</a>
          </div>
          <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password">
        </div>
        <div class="signin-buttons">
          <button type="submit" class="btn btn-inverse">Login</button>
          <a class="btn btn-info" href="{{facebookPath}}">Use Facebook</a>
        </div>
      </form>
    </div>
  </section>
</div>
