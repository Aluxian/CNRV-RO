{{{partial 'app/views/layouts/layout_nav' root=this user=pageData.user nav=pageData.nav}}}

<div class="container">
  <section class="container">
    <div class="articlesWrapper col-md-8">
      <h3>Postari in categoria {{posts.0.category.name}}</h3>

      <div class="articles">
        {{#each posts}}
        {{{partial 'app/views/layouts/layout_post_excerpt' post=this}}}
        {{/each}}
      </div>

      <ul class="pager">
        <li class="previous{{pagePrevDisabled params.page totalPosts}}"><a{{{pagePrev params.page totalPosts}}}>&larr; Older</a></li>
        <li class="next{{pageNextDisabled params.page}}"><a{{{pageNext params.page}}}>Newer &rarr;</a></li>
      </ul>
    </div>

    {{{partial 'app/views/layouts/layout_widgets' widgets=pageData.widgets}}}
  </section>
</div>
