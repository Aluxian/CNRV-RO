<div class="hero-unit">
  <h2>All Categories</h2>
  <a href="/categories/add" class="btn pull-right">Create a new Category</a>
</div>

<div id="categories-list">
{{#each categories }}
  <div class="row list-item" id="category-{{id}}">
    <div class="span8">
      <h3><a href="/categories/{{id}}">{{id}}</a></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i>{{id}}</h3>
    </div>
  </div>
{{/each}}
</div>
