      {{#if comments.length}}
      <h4>{{comments.length}} {{singOrPlural comments.length 'Comentariu' 'Comentarii'}}</h4>

      <div class="comments">
        {{#each comments}}
        <div class="comment">
          <div class="col-md-2">
            <img class="comment-avatar" src="http://designmodo.com/wp-content/glc_cache/f58875f894bb40f82b72b89cf9b4e85c-75.jpg" alt="Avatar">
          </div>
          <div class="col-md-10">
            <div class="comment-header">
              <span class="col-md-8">
                {{#if user}}
                <a href="/users/{{user.id}}">{{user.givenName}} {{user.familyName}}</a>
                {{else}}
                Anonymous User
                {{/if}}
              </span>
              <span class="col-md-4">{{timeToCommentFormat createdAt}}</span>
            </div>
            <p>{{content}}</p>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
      
      <h4>Adauga un comentariu</h4>

      <form class="comment-reply-form form-horizontal" role="form">
        <div class="form-group">
          <label for="inputName3" class="col-sm-2 control-label">Nume</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName3" placeholder="John Doe">
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3" placeholder="john@example.com">
          </div>
        </div>
        <div class="form-group">
          <label for="inputComment3" class="col-sm-2 control-label">Comentariu</label>
          <div class="col-sm-10">
            <textarea class="form-control" id="inputComment3" placeholder="Scrie un comentariu..." rows="4"></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-inverse">Trimite</button>
          </div>
        </div>
      </form>
