<!-- Navigation bar -->
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-nav">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">CNRV</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-nav">
      <ul class="nav navbar-nav">
        {{#if nav.categories}}
          <li class="dropdown">
            <a class="dropdown-toggle disabled responsive-disable" href="/" data-toggle="dropdown">Blog</a>
            <ul class="dropdown-menu">
              {{#each nav.categories}}
                <li><a href="{{categoryPath id}}">{{name}}</a></li>
              {{/each}}
            </ul>
          </li>
        {{/if}}

        {{#each nav.menus}}
          <li class="dropdown">
            <a class="dropdown-toggle disabled responsive-disable" data-toggle="dropdown">{{name}}</a>
            <ul class="dropdown-menu">
              {{#each pages}}
                <li><a href="{{pagePath id}}">{{title}}</a></li>
              {{/each}}
            </ul>
          </li>
        {{/each}}
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="placeholder"></li>
        {{#if user}}
          <li class="dropdown">
            <a href="{{userPath user.id}}" class="dropdown-toggle disabled responsive-disable" data-toggle="dropdown">
              {{#if user.avatar}}
                <img class="profile-picture" src="{{user.avatar}}" alt="{{user.givenName}} {{user.familyName}}">
              {{/if}}
              <div class="profile-name">
                {{#if user.givenName}}
                  <span>{{user.givenName}} {{user.familyName}}</span>
                {{else}}
                  <span>{{user.username}}</span>
                {{/if}}
              </div>
            </a>
  <ul class="dropdown-menu user-logged-in">
    <li><a href="{{userPath user.id}}">Pagină Profil</a></li>
    <li><a href="{{addPostPath}}">Adaugă Postare</a></li>
    {{#hasPermission user.role 'author'}}<li><a href="{{addPagePath}}">Adaugă Pagină</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="{{categoriesPath}}">Editează Categorii</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="{{menusPath}}">Editează Meniuri</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="{{linksPath}}">Editează Linkuri</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="{{eventsPath}}">Editează Calendar</a></li>{{/hasPermission}}
    <li><a href="{{logoutPath}}">Log out</a></li>
  </ul>
          </li>
        {{else}}
          <li>
            <a href="/login" class="disabled responsive-disable">Login</a>
          </li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

<header class="container">
  {{#ifEqual root.url '/'}}
    <div id="carousel" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item img-1 active"></div>
        <div class="item img-2"></div>
        <div class="item img-3"></div>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#carousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>
  {{else}}
    <h1>Colegiul Național “Roman-Vodă”</h1>
    <span>“Un colegiu pentru cine știe ce vrea, și pentru cine vrea să știe!”</span>
  {{/ifEqual}}
</header>
