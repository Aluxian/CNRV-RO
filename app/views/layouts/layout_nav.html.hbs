<!-- Navigation bar -->
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-nav">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">CNRV</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-nav">
      <ul class="nav navbar-nav">
        {{#if nav.categories}}
          <li class="dropdown">
            <a class="dropdown-toggle disabled responsive-disable" href="/" data-toggle="dropdown">Blog</a>
            <ul class="dropdown-menu">
              {{#each nav.categories}}
                <li><a href="{{categoryPath id}}">{{name}}</a></li>
              {{/each}}
            </ul>
          </li>
        {{/if}}

        {{#each nav.menus}}
          <li class="dropdown">
            <a class="dropdown-toggle disabled responsive-disable" data-toggle="dropdown">{{name}}</a>
            <ul class="dropdown-menu">
              {{#each pages}}
                <li><a href="{{pagePath id}}">{{title}}</a></li>
              {{/each}}
            </ul>
          </li>
        {{/each}}
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="placeholder"></li>
        {{#if user}}
          <li class="dropdown">
            <a href="{{userPath user.id}}" class="dropdown-toggle disabled responsive-disable" data-toggle="dropdown">
              {{#if user.avatar}}
                <img class="profile-picture" src="{{user.avatar}}" alt="{{user.givenName}} {{user.familyName}}">
              {{/if}}
              <div class="profile-name">
                {{#if user.givenName}}
                  <span>{{user.givenName}} {{user.familyName}}</span>
                {{else}}
                  <span>{{user.username}}</span>
                {{/if}}
              </div>
            </a>
  <ul class="dropdown-menu user-logged-in">
    <!-- <li><a href="{{userPath user.id}}">Pagină Profil</a></li> -->
    <li><a href="{{addPostPath}}">Adaugă Postare</a></li>
    {{#hasPermission user.role 'author'}}<li><a href="/pages/add">Adaugă Pagină</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="/categories">Editează Categorii</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="/menus">Editează Meniuri</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="/links">Editează Linkuri</a></li>{{/hasPermission}}
    {{#hasPermission user.role 'admin'}}<li><a href="/events">Editează Calendar</a></li>{{/hasPermission}}
    <!-- {{#hasPermission user.role 'admin'}}<li><a href="/posts/review">Moderează Postări</a></li>{{/hasPermission}} -->
    {{#hasPermission user.role 'admin'}}<li>
      <a href="https://developers.facebook.com/tools/comments?id=675605892472294&view=queue">Moderează Comentarii</a>
    </li>{{/hasPermission}}
    <li><a href="{{logoutPath}}">Log out</a></li>
  </ul>
          </li>
        {{else}}
          <li>
            <a href="/login" class="disabled responsive-disable">Login</a>
          </li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

<header class="container">
  <div class="textWrapper">
    <h1>Colegiul Național “Roman-Vodă”</h1>
    <span>“Un colegiu pentru cine știe ce vrea, și pentru cine vrea să știe!”</span>
  </div>
</header>
