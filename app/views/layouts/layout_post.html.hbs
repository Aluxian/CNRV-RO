{{#with post}}
<article>
  <h2><a href="{{postPath id}}">{{title}}</a></h2>

  <ul class="post-info">
    <li><a href="{{userPath user.id}}">{{user.givenName}} {{user.familyName}}</a></li>
    <li>&bull;</li>
    <li><a href="{{categoryPath category.id}}">{{category.name}}</a></li>
    <li>&bull;</li>
    <li>{{timeToPostFormat createdAt}}</li>
  </ul>

  <div class="post-body">
    {{{content}}}
  </div>

  <div class="fb-like" data-href="{{../root.request.headers.host}}{{../root.url}}" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
</article>
{{/with}}
